extends ../layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Your Baby Sitter

                #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
                li
                    a(href='#') Dashboard
    h1.
        #{title}
    table.table
        thead
            tr
                th #
                th Name
                th Categories
                th Phone
                th Locality
                th Is Verified
            tbody
                each blob, i in blobs
                    tr
                        td= 20 * page + (i + 1)
                        td
                            a(href="/blobs/" + blob._id + "/edit")= blob.name
                        td= blob.categories
                        td= blob.phone
                        td= blob.locality
                        td= blob.isVerified
    if (pages > 1)
        .pagination
            != createPagination(pages, page)